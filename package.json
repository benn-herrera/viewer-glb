{
  "name": "@shopify/viewer-glb",
  "version": "0.5.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "A utility for viewing and comparing glTF 2.0 binary files using Google's <model-viewer> component. derived from @shopify/screenshot-glb",
  "bin": {
    "screenshot-glb": "./dist/cli.js"
  },
  "scripts": {
    "prepare": "yarn build",
    "build": "tsc",
    "lint": "prettier --check ./src",
    "lint:fix": "prettier --write ./src",
    "test": "jest",
    "dev": "yarn build && node dist/cli.js ./test/fixtures/WaterBottle.glb -w 256 -h 512 -v --exposure=1.4 --environment_map=test/fixtures/environment.jpg",
    "dev:astro": "yarn build && node dist/cli.js ./test/fixtures/Astronaut.glb -w 256 -h 512 -v",
    "dev:water": "yarn build && node dist/cli.js ./test/fixtures/WaterBottle.glb -w 256 -h 512 -v",
    "dev:bgcolor": "yarn build && node dist/cli.js ./test/fixtures/WaterBottle.glb -c \"rgba(0.0, 0.0, 0.0, 0.0)\" -w 256 -h 512",
    "dev:compare": "yarn build && node dist/cli.js ./test/fixtures/WaterBottle.glb ./test/fixtures/WaterBottle.glb -w 256 -h 512"
  },
  "author": "Stephan Leroux <stephan.leroux@shopify.com>",
  "license": "MIT",
  "dependencies": {
    "@shopify/prettier-config": "^1.1.2",
    "mime-types": "^2.1.34",
    "puppeteer": "^24.10.0",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "jest": "^27.4.7",
    "prettier": "^2.7.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  }
}
